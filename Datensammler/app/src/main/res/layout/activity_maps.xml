<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="datensammer.datensammler.MapsActivity" />


    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="8dp"
        android:layout_marginEnd="9dp"
        android:onClick="onButtonStartStopClick"
        android:text="Start" />


    <Button
        android:id="@+id/buttonFix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonStart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="-1dp"
        android:onClick="onButtonFixClick"
        android:text="Fix" />


    <Button
        android:id="@+id/buttonEditRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="46dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="141dp"
        android:layout_toEndOf="@+id/buttonFix"
        android:onClick="onButtonEditRoute"
        android:text="Edit Route" />

    <Button
        android:id="@+id/buttonResetRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/map"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="7dp"
        android:onClick="onButtonResetRouteClick"
        android:text="Reset"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonAddWp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonFix"
        android:layout_alignTop="@+id/buttonResetRoute"
        android:layout_marginTop="3dp"
        android:onClick="onButtonAddWpClick"
        android:text="Add WP"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonChangeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonFix"
        android:layout_alignEnd="@+id/map"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="222dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="10dp"
        android:onClick="onButtonChangeView"
        android:text="Karte/Satellit"
        android:visibility="visible" />


</RelativeLayout>