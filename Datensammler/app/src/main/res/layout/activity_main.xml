<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <RadioGroup
        android:id="@+id/myRadioGroup"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonMapView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/gpsLocationProvider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LOCATION_MANAGER_GPS" />

        <RadioButton
            android:id="@+id/netzwerkLocationProvider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="LOCATION_MANAGER_NETZWERK" />

        <RadioButton
            android:id="@+id/fusedLocationProviderHighAccuancy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FUSED_LOCATION_PROVIDER_HIGH_ACCUANCY" />

        <RadioButton
            android:id="@+id/fusedLocationProviderBalancedPower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FUSED_LOCATION_PROVIDER_BALANCED_POWER" />

        <RadioButton
            android:id="@+id/fusedLocationProviderLowPower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FUSED_LOCATION_PROVIDER_LOW_POWER" />

        <RadioButton
            android:id="@+id/fusedLocationProviderNoPower"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FUSED_LOCATION_PROVIDER_NO_POWER" />


    </RadioGroup>


    <Button
        android:id="@+id/buttonMapView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        android:onClick="onButtonShowMapClick"
        android:text="Show Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>